{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_moduels", "build"],
  "include": ["src/*"]
}
